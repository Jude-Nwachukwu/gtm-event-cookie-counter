const getCookieValues = require('getCookieValues');
const setCookie = require('setCookie');
const createQueue = require('createQueue');
const makeNumber = require('makeNumber');
const makeString = require('makeString');
const getTimestampMillis = require('getTimestampMillis');

const dataLayerPush = createQueue('dataLayer');

const cookieName = makeString(data.cookieName);
const cookieDuration = data.cookieDuration;
const cookieLifeSpan = makeNumber(data.cookieLifeSpan);
const pushToDataLayer = data.pushtoDataLayer;
const useCustomEventName = data.useCustomEventName;
const customEventName = useCustomEventName ? makeString(data.customDataLayerEventName) : 'gtm_temp_dd_eventUpdate';
const setCookieDomain = data.setCookieDomain ? makeString(data.inputCookieDomain) : undefined;
const setCookiePath = data.setCookiePath ? makeString(data.inputCookiePath) : undefined;

// Retrieve cookie value
let currentValue = getCookieValues(cookieName);
currentValue = currentValue ? makeNumber(currentValue) + 1 : 1;

// Calculate max-age in seconds
let maxAge = 0;
if (cookieDuration === 'secondsDuration') {
  maxAge = cookieLifeSpan;
} else if (cookieDuration === 'minutesDuration') {
  maxAge = cookieLifeSpan * 60;
} else if (cookieDuration === 'hourDuration') {
  maxAge = cookieLifeSpan * 3600;
} else if (cookieDuration === 'dayDuration') {
  maxAge = cookieLifeSpan * 86400;
}

// Set the cookie
setCookie(cookieName, makeString(currentValue), {
  domain: setCookieDomain,
  path: setCookiePath,
  'max-age': maxAge // Use max-age instead of expires
});

// Push event to dataLayer if enabled
if (pushToDataLayer) {
  dataLayerPush({
    event: customEventName,
    gtm_current_value: currentValue
  });
}

// Signal GTM that the tag execution was successful
data.gtmOnSuccess();


